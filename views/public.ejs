<%- include('includes/public/sec-a'); %>

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
        <div class="carousel-indicators">
            <% posts.forEach(function(post, i){ %>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= i %>"
                    class="<%= i === 0 ? 'active' : '' %>" aria-current="true" aria-label="Slide <%= i + 1 %>"></button>
                <% }); %>
        </div>
        <div class="carousel-inner">
            <% posts.forEach(function(post, i){ %>
                <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <img src="/media/<%= post.filename %>" class="d-block w-100" alt="Slide <%= post.title %>">
                    <div class="carousel-caption d-md-block">
                        <h5>
                            <%= post.title %>
                        </h5>
                        <p>
                            <%= post.excerpt %>
                        </p>
                        <a href="/posts/<%= post.slug %>" class="btn btn-light"><i class="bi bi-eye-fill"></i> ver</a>
                    </div>
                </div>
                <% }); %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <h2 class="text-center">Articulos</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <% posts.forEach(function(post){ %>
                <div class="col-md-3 col-6 mb-4">
                    <a class="public-card" href="/posts/<%= post.slug %>">
                        <div class="card">
                            <img src="/media/<%= post.filename %>" class="card-img-top"
                                alt="Thumbnail <%= post.title %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.title %>
                                </h5>
                                <p class="card-text">
                                    <%= post.excerpt %>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% }); %>
        </div>
    </div>

    <!-- Background image -->
    <section class="p-5 text-center bg-image public-call-to-action">
        <div class="mask">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white">
                    <h1 class="mb-3">Heading</h1>
                    <h4 class="mb-3">Subheading</h4>
                    <a class="btn btn-outline-light btn-lg" href="#!" role="button">Call to action</a>
                </div>
            </div>
        </div>
    </section>

    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <h2 class="text-center">Contacto</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-6 offset-sm-3">
                <%- include('includes/public/form'); %>
            </div>
        </div>
    </div>
    <%- include('includes/public/sec-b'); %>